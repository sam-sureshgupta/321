<!--
Apex:PageBlockButtons:
-------------------------
1. This is a child component of pageBlock.
2. Child elements (Body) of the pageBlockButtons will be displayed on the header and
   footer of the pageBlock.
3. Attributes :
	SNO		Name		Type			Description
	1. 		Location	String 			1. This will specify the location where the Body
										    of pageBlockButtons should be displayed
										2. Possible values are top,bottom,Both
										3. Default value is both

	2. 		Dir			String 			1, This will specify the direction in which body of the 
										   pageBlockButtons will be displayed.
										2. Possible values are RTL,LTR 
										3. Default value is LTR 

	3.		Style		CSS				1. We can specify the our css for the pageBlockButtons
-->
<apex:page >
    <apex:pageBlock title="Example">
        <apex:pageBlockButtons >
            LastName  &nbsp;&nbsp;&nbsp;&nbsp;  FirstName        
        </apex:pageBlockButtons>
        Testing: <br/>
        Testing: <br/>
        Testing: <br/>     
    </apex:pageBlock>
    <apex:pageBlock title="Example">
        <apex:pageBlockButtons location="top">
            LastName    &nbsp;&nbsp;&nbsp;&nbsp; FirstName        
        </apex:pageBlockButtons>
        Testing: <br/>
        Testing: <br/>
        Testing: <br/>     
    </apex:pageBlock>
    <apex:pageBlock title="Example">
        <apex:pageBlockButtons dir="RTL">
            LastName    &nbsp;&nbsp;&nbsp;&nbsp; FirstName        
        </apex:pageBlockButtons>
        Testing: <br/>
        Testing: <br/>
        Testing: <br/>     
    </apex:pageBlock>
    
    <apex:pageBlock title="Example" dir="RTL">
        <apex:pageBlockButtons >
            LastName    &nbsp;&nbsp;&nbsp;&nbsp; FirstName        
        </apex:pageBlockButtons>
        Testing: <br/>
        Testing: <br/>
        Testing: <br/>      
    </apex:pageBlock>
</apex:page>